<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp_Animations.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="25"
                HorizontalOptions="Center"
                x:Name="MyImage1" />
            <Image
                Source="dotnet_bot.png"
                HeightRequest="25"
                HorizontalOptions="Center"
                x:Name="MyImage2" />
            <Image
                Source="dotnet_bot.png"
                HeightRequest="100"
                HorizontalOptions="Center"
                x:Name="MyImage3" />

            <Button
                Text="Click me"
                Clicked="OnClick"
                HorizontalOptions="Center"
                x:Name="MyButton" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
